<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:background="@color/themeYellow"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bespeakfragment"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginTop="100px"
            android:background="@null"
            android:ellipsize="end"
            android:padding="20px"
            android:singleLine="true"
            android:text="中原工学院科技园"
            android:textColor="@color/textWhite"
            android:textSize="40px" />

        <com.zz.huangxiaoer.manager.MyEditText
            android:id="@+id/edt_operator_name"
            android:layout_width="500px"
            android:layout_height="60px"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext"
            android:drawableLeft="@drawable/serch"
            android:ellipsize="end"
            android:hint="搜索店铺、菜品名称"
            android:singleLine="true"
            android:textSize="30px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="#f8f8f8"
        android:gravity="center_vertical"
        android:padding="20px"
        android:text="附近商家"
        android:textColor="@color/textGray" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</com.zhy.autolayout.AutoLinearLayout>
