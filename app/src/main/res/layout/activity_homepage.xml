<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zz.huangxiaoer.activity.HomepageActivity">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:background="@color/themeYellow"
        android:orientation="vertical">

        <TextView
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginTop="100px"
            android:background="@null"
            android:ellipsize="end"
            android:padding="20px"
            android:singleLine="true"
            android:text="黄小二黄小二黄小二黄小二"
            android:textColor="@color/textWhite"
            android:textSize="40px" />

        <com.zz.huangxiaoer.manager.MyEditText
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="30px"
            android:id="@+id/edt_operator_name"
            android:layout_width="500px"
            android:layout_height="60px"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext"
            android:drawableLeft="@drawable/serch"
            android:hint="搜索店铺、菜品名称"

            />

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
