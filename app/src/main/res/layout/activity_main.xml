<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zz.huangxiaoer.MainActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500px">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:background="#fff200" />

        <ImageView
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160px"
            android:background="@drawable/logo_alone" />
    </com.zhy.autolayout.AutoRelativeLayout>


    <EditText
        android:layout_marginTop="20px"
        android:id="@+id/etnum_login"
        android:layout_width="600px"
        android:layout_height="80px"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/username"
        android:hint="请输入手机号码"
        android:textColor="@color/textGray"
        android:textSize="@dimen/textleast" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <EditText
            android:layout_marginTop="20px"
            android:id="@+id/etpass_login"
            android:layout_width="600px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/userpass"
            android:hint="输入短信验证码"
            android:textColor="@color/textGray"
            android:textSize="@dimen/textleast"
            />

        <Button
            android:textColor="@color/textGray"
            android:layout_width="150px"
            android:layout_height="80px"
            android:background="#fff200"
            android:text="获取验证码"
            android:textSize="20px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/code_login" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <Button
        android:id="@+id/entry_login"
        android:text="登录"
        android:textColor="@color/textWhite"
        android:background="@color/themeYellow"
        android:layout_width="300px"
        android:layout_height="80px"
        android:layout_gravity="center"
        android:layout_marginTop="40px" />

    <TextView
        android:layout_marginTop="20px"
        android:textColor="@color/themeYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="使用常规方式登录"
        android:textSize="30px" />


    <TextView
        android:layout_marginTop="150px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="其他登录方式"
        android:textSize="30px" />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:gravity="center">

        <ImageButton
            android:layout_margin="40px"
            android:layout_width="100px"
            android:layout_height="110px"
            android:background="@drawable/wechat" />

        <ImageButton
            android:layout_margin="40px"
            android:layout_width="100px"
            android:layout_height="110px"
            android:background="@drawable/qq" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
